<div class="activate-customer">
	<div class="container">
		<div class="form-container">

			<h1 class="h2 simple-page-header">{{ 'customer.activate_account.title' | t }}</h1>

			{% form 'activate_customer_password', data-js-element: 'create-customer-form' %}

				<div class="form-section">
					<div class="form-element">
						<input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}">
						<label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>
					</div>

					<div class="form-element">
						<input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
						<label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
					</div>
				</div>

				<div class="form-section">
					<div class="form-element">
						{{ form.errors | default_errors }}
						<button type="submit" class="primary-button form-main-button">{{ 'customer.activate_account.submit' | t }}</button>
					</div>
					<div class="form-element">
						<button type="submit" class="primary-button-outlined form-main-button" name="decline">{{ 'customer.activate_account.cancel' | t }}</button>
					</div>
				</div>
			{% endform %}
		</div>
	</div>
</div>