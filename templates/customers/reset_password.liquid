<!-- /templates/customers/reset_password.liquid -->


<div class="reset-password">
	<div class="form-container">

		<div class="simple-page-header">
			<h1 class="h2">{{ 'customer.reset_password.title' | t }}</h1>
		</div>

		{% form 'reset_customer_password', data-js-simple-form: '' %}

			<div class="form-section">
				{{ form.errors | default_errors }}

				<div class="form-element">
					<input type="password" value="" name="customer[password]" id="ResetPassword" placeholder="{{ 'customer.reset_password.password' | t }}" class="{% if form.errors contains 'password' %} error{% endif %}">
					<label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
				</div>

				<div class="form-element">
					<input type="password" value="" name="customer[password_confirmation]" id="ResetPasswordConfirmation" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" class="{% if form.errors contains 'password_confirmation' %} error{% endif %}">
					<label for="ResetPasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
				</div>
			</div>

			<div class="form-section">
				<input type="submit" class="primary-button form-main-button" value={{ 'customer.reset_password.submit' | t }}>
			</div>
		
		{% endform %}

	</div>
</div>