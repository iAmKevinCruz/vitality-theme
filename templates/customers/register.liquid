<!-- /templates/customers/register.liquid -->

<div class="create-customer">
	<div class="container">
		<div class="form-container">
			<h1 class="h2 simple-page-header">{{ 'customer.register.title' | t }}</h1>
			
			{% form 'create_customer', class: 'create-customer__form', data-js-element: 'create-customer-form' %}
				
				<div class="form-section create-customer__fields-wrapper">

					<div class="form-element create-customer__first-name">
						<input type="text" name="customer[first_name]" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} placeholder="{{ 'customer.register.first_name' | t }}" autocapitalize="characters">
						<label for="FirstName">{{ 'customer.register.first_name' | t }}</label>
					</div>

					<div class="form-element create-customer__last-name">
						<input type="text" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} placeholder="{{ 'customer.register.last_name' | t }}" autocapitalize="characters">
						<label for="LastName">{{ 'customer.register.last_name' | t }}</label>
					</div>

					<div class="form-element">
						<input type="email" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %} error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} placeholder="{{ 'customer.register.email' | t }}" autocorrect="off" autocapitalize="characters">
						<label for="Email">{{ 'customer.register.email' | t }}</label>
					</div>

					<div class="form-element">
						<input type="password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.register.password' | t }}">
						<label for="CreatePassword">{{ 'customer.register.password' | t }}</label>
					</div>

					<div class="form-element">
						<input type="password" name="customer[password_confirmation]" id="CreatePasswordConfirmation" placeholder="{{ 'customer.register.confirm_password' | t }}">
						<label for="CreatePasswordConfirmation">{{ 'customer.register.confirm_password' | t }}</label>
					</div>
				</div>

				<div class="form-section">
					{{ form.errors | default_errors }}
					 <div class="errors" data-js-element="js-form-errors" style="display: none;"><ul>
					 	<li data-js-form-error="passwords-dont-match">{{ 'customer.register.passwords_dont_match' | t }}</li>
					 </ul></div>
					<button type="submit" class="primary-button form-main-button" data-js-element="create-customer-form-submit">{{ 'customer.register.submit' | t }}</button>
				</div>

				<div class="form-section">
					<p class="text-center">{{ 'customer.register.already_have_account' | t }}</p>
					<div><a href="{{ routes.account_login_url }}" class="primary-button-outlined form-main-button create-customer__login-button">{{ 'customer.login.sign_in' | t }}</a></div>
				</div>

			{% endform %}
		</div>
	</div>
</div>