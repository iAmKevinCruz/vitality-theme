{%- comment -%} VERSION: 0.0.3 Please do not delete this line. {%- endcomment -%}
{%- capture bc_layout -%}
{%- case layout -%}
{%- when 'productGridItemHtml' -%}
<div class="boost-pfs-filter-product-item boost-pfs-filter-product-item-grid [[gridWidthClass]] [[soldOutClass]] [[comingSoonClass]] [[saleClass]] [[itemActiveSwapClass]]">
    <div class="boost-pfs-filter-product-item-inner">
      <div class="boost-pfs-filter-product-item-image">
            [[itemImages]]
            <!-- <div class="boost-pfs-filter-product-item-label">[[itemLabels]][[itemTagLabels]]</div> -->
            <div class="product-card__label">
              [[itemCustomLabel]]
            </div>
    
            <div class="product-card__wishlist">
                <!-- include 'wishlist-button-collection' with '[[itemId]]' -->
            </div>
            
            
            <form method="post" action="/cart/add" id="product_form_[[itemVariantId]]" accept-charset="UTF-8" class="quickShop" enctype="multipart/form-data"><input type="hidden" name="form_type" value="product"><input type="hidden" name="utf8" value="✓">
                <input type="hidden" name="quantity" value="1" min="1">
                <div class="product-card__actions [[itemVariantsSize]]">
                
                  <div class="hover-select [[itemVariantsSize]]" data-value="[[itemVariantId]]">
                      <select name="id" class="select-tag" style="display: none;">
                        [[itemVariantsOptions]]
                      </select>
                      <strong class="title">{{ 'products.product.quickadd' | t }} +</strong>
                      <ul class="hover-select__list">
                        [[itemVariantsList]]
                      </ul>
                      [[itemDefaultButton]]
                  </div>
                  [[itemLabelsProperty]]
                  [[itemButton]]
                  
              </div>
              
              <notify-modal-opener data-modal="data-popup-modal" style="display: none;">
                <button id="ProductPopup-notifyme" type="button" aria-haspopup="dialog" class="primary-button">{{ 'products.product.notify_me' | t }}</button>
                <div data-popup-content style="display: none;">
                    <div class="notify-title">[[itemTitle]]</div>
                    <p>{{ 'products.product.notify_me_text' | t }}</p>
                    <select name="variant">
                      [[notifyMeVariantsOptions]]
                    </select>
                </div>
              </notify-modal-opener>
            </form>
        </div>

        <div class="boost-pfs-filter-product-bottom product-card__description card">
          <div class="card__titleblock">
              <h2 class="h5 title"><a href="[[itemUrl]]">[[itemTitle]]</a></h2>
          </div>
          <div class="card__priceblock">
            [[itemPrice]]
          </div>
          {% comment %}
          <!-- <div class="boost-pfs-filter-product-bottom-inner">
            <a href="[[itemUrl]]#" class="boost-pfs-filter-product-item-title">[[itemTitle]]</a>
            [[itemVendor]]
            [[itemReviews]]
            [[itemPrice]]
            [[itemColorSwatches]]
            [[itemSizeSwatches]]
          </div> -->
          {% endcomment%}
        </div>
        <div class="product-card__sale">[[itemFinalSale]]</div>
        <div class="product-card__reviews">
          [[itemFinalSale]]
          <a href="[[itemUrl]]#yotpoWidget" class="review-link"></a>
          [[itemYotpoStars]]
        </div>
        <form method="post" action="/cart/add" id="product_form_[[itemVariantId]]" accept-charset="UTF-8" class="quickShop quickshop-mobile" enctype="multipart/form-data"><input type="hidden" name="form_type" value="product"><input type="hidden" name="utf8" value="✓">
          <input type="hidden" name="quantity" value="1" min="1">
          <div class="product-card__actions [[itemVariantsSize]]">
          
            <div class="hover-select" data-value="[[itemVariantId]]">
                <select name="id" class="select-tag" style="display: none;">
                  [[itemVariantsOptions]]
                </select>
                <strong class="title quickshop-button">{{ 'products.product.quickadd' | t }} +</strong>
                <ul class="hover-select__list hidden">
                  [[itemVariantsList]]
                </ul>
            </div>
            [[itemLabelsProperty]]
            [[itemButton]]
            
        </div>
         <notify-modal-opener data-modal="data-popup-modal" style="display: none;">
                <button id="ProductPopup-notifyme" type="button" aria-haspopup="dialog" class="primary-button">{{ 'products.product.notify_me' | t }}</button>
                <div data-popup-content style="display: none;">
                    <div class="notify-title">[[itemTitle]]</div>
                    <p>{{ 'products.product.notify_me_text' | t }}</p>
                    <select name="variant">
                      [[notifyMeVariantsOptions]]
                    </select>
                </div>
              </notify-modal-opener>
      </form>
    </div>
</div>

{%- when 'productListItemHtml' -%}
<div class="boost-pfs-filter-product-item boost-pfs-filter-product-item-list [[soldOutClass]] [[saleClass]] [[itemActiveSwapClass]]">
  <div class="boost-pfs-filter-product-item-inner">
    <div class="boost-pfs-filter-product-item-image">
        [[itemImages]]
        <div class="boost-pfs-filter-product-item-label">[[itemLabels]][[itemTagLabels]]</div>
    </div>
    <div class="boost-pfs-filter-product-bottom">
      <div class="boost-pfs-filter-product-bottom-inner">
        <a href="[[itemUrl]]" class="boost-pfs-filter-product-item-title">[[itemTitle]]</a>
        [[itemVendor]]
        [[itemReviews]]
        [[itemPrice]]
        <p class="boost-pfs-filter-des">[[itemDescription]]</p>
        [[itemColorSwatches]]
        [[itemSizeSwatches]]
      </div>
    </div>
  </div>
</div>
{%- when 'productListPlaceholderHtml' -%}
<div class="boost-pfs-filter-product-item boost-pfs-filter-product-item-list [[class.filterProductSkeleton]]">
  <div class="boost-pfs-filter-product-item-image">
    <div class="[[class.filterProductSkeleton]]-image" style="padding-top: [[paddingTop]]%"></div>
  </div>
  <div class="boost-pfs-filter-product-bottom">
    <div class="boost-pfs-filter-product-bottom-inner">
    <a href="#" class="boost-pfs-filter-product-item-title"><span class="boost-pfs-filter-skeleton-text boost-pfs-filter-skeleton-width4"></span></a>
    <p class="boost-pfs-filter-product-item-vendor"><span class="boost-pfs-filter-skeleton-text boost-pfs-filter-skeleton-width1"></span></p>
    <p class="boost-pfs-filter-product-item-price"><span class="boost-pfs-filter-skeleton-text boost-pfs-filter-skeleton-width2"></span></p>
    <p class="boost-pfs-filter-des">
      <span class="boost-pfs-filter-skeleton-text" style="width: 100%"></span><br />
      <span class="boost-pfs-filter-skeleton-text" style="width: 100%"></span><br />
      <span class="boost-pfs-filter-skeleton-text" style="width: 100%"></span><br />
      <span class="boost-pfs-filter-skeleton-text" style="width: 30%"></span>
    </p>
    </div>
  </div>
</div>

{%- when 'soldOutLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
{% assign product_label_image_sold_out = section.settings.product_label_image_sold_out %}

<span class="soldout boost-pfs-filter-label">{% if show_product_label_image %}<img src="{{ product_label_image_sold_out | img_url: 'small' }}" alt="{{ product_label_image_sold_out.alt }}" />{% else %}{{ label_soldout | default: 'Sold Out' }}{% endif %}</span>

{%- when 'saleLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
{% assign product_label_image_sale = section.settings.product_label_image_sale %}
{% assign show_sale_percent = section.settings.show_sale_percent %}
<span class="sale boost-pfs-filter-label">{% if show_product_label_image %}<img src="{{ product_label_image_sale | img_url: 'small' }}" alt="{{ product_label_image_sale.alt }}" />{% else %}{% if show_sale_percent %} [[salePercent]] {% else %} {{ label_sale | default: 'Sale' }}{% endif %}{% endif %}</span>

{%- when 'tagLabelHtml' -%}
<span class="tag boost-pfs-filter-label [[labelTag]]" >[[labelTag]]</span>

{%- when 'vendorHtml' -%}
<p class="boost-pfs-filter-product-item-vendor">[[itemVendorLabel]]</p>

{%- when 'previousActiveHtml' -%}
<li><a href="[[itemUrl]]">&larr;</a></li>

{%- when 'previousDisabledHtml' -%}
<li class="boost-pfs-filter-pagination-disabled"><span>&larr;</span></li>

{%- when 'nextActiveHtml' -%}
<li><a href="[[itemUrl]]">&rarr;</a></li>

{%- when 'nextDisabledHtml' -%}
<li class="boost-pfs-filter-pagination-disabled"><span>&rarr;</span></li>

{%- when 'pageItemHtml' -%}
<li><a href="[[itemUrl]]">[[itemTitle]]</a></li>

{%- when 'pageItemSelectedHtml' -%}
<li><span class="boost-pfs-filter-pagination-active">[[itemTitle]]</span></li>

{% when 'pageItemRemainHtml' %}
<li><span>[[itemTitle]]</span></li>

{%- when 'paginateHtml' -%}
<ul>[[previous]][[pageItems]][[next]]</ul>

{%- when 'sortingHtml' -%}
<button class="boost-pfs-filter-top-sorting-wrapper"><span><span> {% assign temp = 'collections.sorting.title' | t  %} {% unless temp contains 'translation missing'  %} {{ temp }} {% else %} Sorting {% endunless %}, </span></span></button><ul class="boost-pfs-filter-filter-dropdown">[[sortingItems]]</ul>

{%- when 'showLimitHtml' -%}
<label> Show </label><select class="boost-pfs-filter-filter-dropdown">[[showLimitItems]]</select>

{%- when 'breadcrumbHtml' -%}
<a href="/"> Home </a> [[breadcrumbDivider]] [[breadcrumbItems]]

{%- when 'breadcrumbDivider' -%}
<span class="divider">/</span>

{%- when 'breadcrumbItemLink' -%}
<a href="[[itemLink]]">[[itemTitle]]</a>

{%- when 'breadcrumbItemSelected' -%}
<span>[[itemTitle]]</span>

{%- endcase -%}
{%- endcapture -%}

{%- assign str = '}}' -%}
{{- bc_layout | json | replace: '[[', '{{' | replace: ']]', str -}}