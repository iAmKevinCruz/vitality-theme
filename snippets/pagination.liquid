<ul class="pagination">
  <li class="pagination__item-wrapper">
    {% if paginate.previous.is_link %}
      <a href="{{ paginate.previous.url }}" class="pagination__item pagination__item--previous">
        <span class="visually-hidden">{{ 'general.pagination.previous' | t }}</span>&nbsp;
      </a>
    {% else %}
      <span class="pagination__item pagination__item--previous">
        <span class="visually-hidden">{{ 'general.pagination.previous' | t }}</span>&nbsp;
      </span>
    {% endif %}
  </li>

  {%- for part in paginate.parts -%}
    {%- if part.is_link -%}
      <li class="pagination__item-wrapper">
        <a href="{{ part.url }}" class="pagination__item pagination__item--page">
          <span class="visually-hidden">{{ 'general.pagination.page' | t }}</span> {{ part.title }}
        </a>
      </li>
    {%- else -%}
      {%- if part.title == paginate.current_page -%}
        <li class="pagination__item-wrapper" aria-current="page">
          <span class="pagination__item pagination__item--page pagination__item--page-active">
            <span class="visually-hidden">{{ 'general.pagination.page' | t }}</span> {{ part.title }}
          </span>
        </li>
      {%- else -%}
        <li>
          <span class="pagination__item pagination__item--page pagination__item--page">
            <span class="visually-hidden">{{ 'general.pagination.page' | t }}</span> {{ part.title }}
          </span>
        </li>
      {%- endif -%}
    {%- endif -%}
  {%- endfor -%}

  <li class="pagination__item-wrapper">
    {% if paginate.next.is_link %}
      <a href="{{ paginate.next.url }}" class="pagination__item pagination__item--next">
        &nbsp;<span class="visually-hidden">{{ 'general.pagination.next' | t }}</span>
      </a>
    {% else %}
      <span class="pagination__item pagination__item--next">
        &nbsp;<span class="visually-hidden">{{ 'general.pagination.previous' | t }}</span>
      </span>
    {% endif %}
  </li>
</ul>
  